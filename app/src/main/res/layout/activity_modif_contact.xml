<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/modif_ajoutcontact"
    android:padding="@dimen/padding_edit">

        <ImageView
            android:id="@+id/photo_preview"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/ajoutcontact"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView

            android:id="@+id/addnom"
            android:text="Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_Name"
            />

        <TextView

            android:id="@+id/addprenom"
            android:text="Prénom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_first_name"
            android:inputType="text" />

        <TextView
            android:id="@+id/numero"
            android:text="Numéro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNumero"
            android:inputType="phone" />


        <Button
            android:id="@+id/importbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import pic" />

        <Button
            android:id="@+id/takepicbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a pic" />

        <Button
            android:id="@+id/valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />

    </LinearLayout>
</ScrollView>